<div class="mb-3 string required item_title">
  <label class="form-label string required" for="item_title">name <abbr title="required">*</abbr>
  </label>
  <input class="form-control string required" type="text" name="item[title]" id="item_title" value="<%= @item.title %>">
</div>
<div class="mb-3 integer required item_d_length">
  <label class="form-label integer required" for="item_d_length">length <abbr title="required">*</abbr>
  </label>
  <input class="form-control numeric integer required" type="number" step="1" name="item[d_length]" id="item_d_length" value="<%= @item.d_length %>">
</div>
<div class="mb-3 integer required item_d_width">
  <label class="form-label integer required" for="item_d_width">width <abbr title="required">*</abbr>
  </label>
  <input class="form-control numeric integer required" type="number" step="1" name="item[d_width]" id="item_d_width" value="<%= @item.d_width %>">
</div>
